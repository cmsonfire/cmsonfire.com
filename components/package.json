{
  "name": "components",
  "version": "1.0.0",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/es/index.js",
  "modern": "dist/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn build:es && yarn build:modern",
    "build:es": "microbundle -o dist/es/index.js --no-pkg-main -f es --jsx createElement",
    "build:modern": "microbundle -o dist/index.js --no-pkg-main -f modern --jsx createElement",
    "dev": "microbundle watch -o dist/index.js --no-pkg-main -f modern --jsx createElement --no-compress"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "microbundle": "^0.12.4"
  }
}